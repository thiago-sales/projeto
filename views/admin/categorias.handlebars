<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-primary">Nova Categoria</button></a>

<a href="/admin/postagens"><button class="btn btn-primary">Posts</button></a>

{{#each categorias}}
	<div class="card mt-4">
		<div class="card-body">
			<h4>{{nome}}</h4> <!-- esta linha pode dar erro-->
			<small>Slug: {{slug}}</small><br>
			<small>Data de criação: {{date}}</small><br>
			<a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-warning mt-4">Editar</button></a>
			<form action="/admin/categorias/deletar" method="POST">
				<input type="hidden" name="id" value="{{_id}}">
				<button type="submit" class="btn btn-danger mt-2">Deletar</button>
			</form>
		</div>
	</div>
{{else}}
	<h4 class="mt-3">Nenhuma categoria registrada!</h4>
{{/each}}

